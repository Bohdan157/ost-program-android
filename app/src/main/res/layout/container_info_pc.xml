<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:textColor="@color/oui_appinfolayout_app_label_text_color"
                android:text="@string/cpu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:text="i5-10400F"
                android:textColor="@color/oui_appinfolayout_sub_text_color"
                android:gravity="end"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:textColor="@color/oui_appinfolayout_app_label_text_color"
                android:text="@string/gpu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:text="ASUS Strix GeForce GTX 1070"
                android:textColor="@color/oui_appinfolayout_sub_text_color"
                android:gravity="end"/>

        </TableRow>

        <TableRow android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:textColor="@color/oui_appinfolayout_app_label_text_color"
                android:text="@string/ram"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:text="x4 Lexar 8192 MB 2666 MHz"
                android:textColor="@color/oui_appinfolayout_sub_text_color"
                android:gravity="end"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:textColor="@color/oui_appinfolayout_app_label_text_color"
                android:text="@string/rom"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/oui_appinfolayout_sub_text_color"
                    android:textAlignment="textEnd"
                    android:text="HDD 1 TB"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/oui_appinfolayout_sub_text_color"
                    android:textAlignment="textEnd"
                    android:text="M2_2 SATA Micron 256 GB"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/oui_appinfolayout_sub_text_color"
                    android:textAlignment="textEnd"
                    android:text="SATA SSD Kingston 240 GB"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:textColor="@color/oui_appinfolayout_app_label_text_color"
                android:text="@string/board"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="4dp"
                android:textSize="14sp"
                android:text="ASUS Prime B760-PLUS"
                android:textColor="@color/oui_appinfolayout_sub_text_color"
                android:gravity="end"/>

        </TableRow>

    </TableLayout>

</FrameLayout>