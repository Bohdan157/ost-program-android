<?xml version="1.0" encoding="utf-8"?>
<dev.oneuiproject.oneui.widget.RoundedFrameLayout
    android:background="?android:colorBackground"
    android:paddingHorizontal="24dp"
    android:paddingVertical="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:edgeInsetTop="36dp"
    app:drawOverEdge="false"
    app:roundedCorners="all"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/icon"
        android:layout_gravity="end|center_vertical"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:scaleType="fitXY"
        tools:src="@drawable/ost_logo"/>

    <LinearLayout
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:layout_gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stargazer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operating_system_tester"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/stargazer_github_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            tools:text="https://github.com/ost-sys"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</dev.oneuiproject.oneui.widget.RoundedFrameLayout>